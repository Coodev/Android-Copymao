<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dip"
                android:text="Kamcord Video"
                android:textColor="#333333"
                android:id="@+id/video_title"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="User Name"
                android:id="@+id/username"
                android:layout_below="@+id/video_title"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/viewView"
                android:src="@drawable/view"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/username" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/viewtextView"
                android:layout_alignBottom="@+id/viewView"
                android:layout_toEndOf="@+id/viewView" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/likeView"
                android:src="@drawable/like"
                android:layout_alignTop="@+id/viewView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/textView"
                android:layout_alignTop="@+id/viewtextView"
                android:layout_toEndOf="@+id/likeView" />


        </RelativeLayout>

    </TableRow>





</LinearLayout>